{
  "name": "quiz",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "yarn workspaces run clean",
    "build": "yarn workspaces run build",
    "dev": "concurrently \"yarn workspace @quiz/quiz-service dev\" \"yarn workspace @quiz/quiz dev\" \"yarn workspace @quiz/quiz storybook\"",
    "serve": "concurrently \"yarn workspace @quiz/quiz-service serve\" \"yarn workspace @quiz/quiz serve\"",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "test": "concurrently \"yarn workspace @quiz/quiz-service test\" \"yarn workspace @quiz/quiz test\""
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  }
}
