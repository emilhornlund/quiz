{
  "name": "klurigo",
  "license": "SEE LICENSE IN LICENSE",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "concurrently \"yarn workspace @klurigo/common clean\" \"yarn workspace @klurigo/klurigo-service clean\" \"yarn workspace @klurigo/klurigo-web clean\"",
    "build": "concurrently \"yarn workspace @klurigo/klurigo-service build\" \"yarn workspace @klurigo/klurigo-web build\"",
    "dev": "concurrently \"yarn klurigo-service:dev\" \"yarn klurigo-web:dev\"",
    "klurigo-service:dev": "yarn workspace @klurigo/klurigo-service dev",
    "klurigo-web:dev": "wait-on http://localhost:8080/health && yarn workspace @klurigo/klurigo-web dev",
    "klurigo-web:storybook": "yarn workspace @klurigo/klurigo-web storybook",
    "serve": "concurrently \"yarn workspace @klurigo/klurigo-service serve\" \"yarn workspace @klurigo/klurigo-web serve\"",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "test": "concurrently --kill-others-on-fail \"yarn workspace @klurigo/common test\" \"yarn workspace @klurigo/klurigo-service test\" \"yarn workspace @klurigo/klurigo-web test\"",
    "test:coverage": "concurrently --kill-others-on-fail \"yarn workspace @klurigo/common test:coverage\" \"yarn workspace @klurigo/klurigo-service test:coverage\" \"yarn workspace @klurigo/klurigo-web test:coverage\"",
    "check-types": "yarn workspaces run check-types"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "wait-on": "^9.0.3"
  },
  "engines": {
    "node": ">=24 <25"
  }
}
